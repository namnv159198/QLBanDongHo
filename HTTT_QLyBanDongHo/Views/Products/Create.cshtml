@model HTTT_QLyBanDongHo.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}
<style>
    .ck-editor__editable_inline {
        min-height: 300px;
    }
</style>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1 style="line-height: 40px">Quản lý sản phẩm</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <div class="btn-group">
                                <a href="@Url.Action("Create", "products")" class="btn btn-primary">
                                    Tạo mới &nbsp;
                                    <i class="fa fa-plus"></i>
                                </a>

                            </div>


                        </ol>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Tạo danh mục </strong>
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("Create", "products", FormMethod.Post, new { @class = "product-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Product</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group row">

                                <div class="col-md-4">
                                    <span class="mb-2">Tên</span>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3">
                                    <span class="mb-2">Giá nhập</span>
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3">
                                    <span class="mb-2">Giá bán</span>
                                    @Html.EditorFor(model => model.AfterPrice, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.AfterPrice, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-2">
                                    <span class="mb-2">Giảm giá</span>
                                    @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-3 mt-3">
                                    <span class="mb-3">Sản phẩm bán chạy nhất</span>
                                    <br />
                                    <div class="mt-3">
                                        <input type="radio" value="0" name="isBestSeller" checked="checked"> không
                                        <input class="ml-4" type="radio" value="1" name="isBestSeller"> có <br>
                                    </div>
                                </div>

                                <div class="col-md-3 mt-3">
                                    <span class="mb-3">Sản phẩm mới</span>
                                    <br />
                                    <div class="mt-3">
                                        <input type="radio" value="0" name="isNew" checked="checked"> không
                                        <input class="ml-4" type="radio" value="1" name="isNew"> có <br>
                                    </div>
                                </div>

                                <div class="col-md-3 mt-3">
                                    <span class="mb-3">Sản phẩm đặc biệt</span>
                                    <br />
                                    <div class="mt-3">
                                        <input type="radio" value="0" name="isSpecial" checked="checked"> không
                                        <input class="ml-4" type="radio" value="1" name="isSpecial"> có <br>
                                    </div>
                                </div>

                                @* <div class="col-md-12 mt-5"> *@
                                @*     <div class="text-uppercase">Mô tả sản phẩm </div> *@
                                @*     <br /> *@
                                @*     @Html.TextAreaFor(model => model.Description, new { @class = "ckeditor"}) *@
                                @*     <input name="Description"  value="" hidden/> *@
                                @*     @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" }) *@
                                @* </div> *@

                                <div class="col-md-6 mt-3">
                                    <span class="mb-3">Ảnh</span>
                                    <div class="col-md-4 uploaded">
                                        <button type="button" id="upload_widget" class="btn bg-primary text-light">Chọn tệp</button>
                                        @Html.ValidationMessageFor(model => model.Thumbnails, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>




                                <div class="form-group">

                                    
                                </div>



                                <div class="form-group">
                                    @Html.LabelFor(model => model.ManufactureID, "ManufactureID", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("ManufactureID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ManufactureID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoryID, "CategoryID", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" id="luu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>

@section scripts{
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/19.1.1/classic/ckeditor.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script type="text/javascript">
        function showUploadWidget() {
            cloudinary.openUploadWidget({
                cloudName: "namnguyen159198",
                uploadPreset: "ml_default",
                sources: [
                    "local",
                    "url",
                    "camera",
                    "image_search",
                    "facebook",
                    "dropbox",
                    "instagram",
                    "shutterstock"
                ],
                form: ".product-form",
                fieldName: "thumbnails[]",
                thumbnails: ".uploaded",
                multiple: true,
            },
                (err, info) => {
                    if (!err) {
                        console.log("Upload Widget event - ", info);
                    }
                });
        }

        $('body').on('click', '.cloudinary-delete', function () {
            var spiltedLink = $(this).prev().attr('src').split('/');
            var imgId = spiltedLink[spiltedLink.length - 1].split('.')[0];
            alert(imgId);
            $(`input[data-cloudinary-public-id="${imgId}"]`).remove();
        });

        document.getElementById("upload_widget").addEventListener("click", function () {
            showUploadWidget();
        }, false);

        ClassicEditor
            .create( document.querySelector( '#ckeditor' ),{
                minHeight: '300px'
            } )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            });

       


    </script>
}
@if ((string)TempData["message"] == "Fail")
{
    <script type="text/javascript">
        Swal.fire({
            icon: 'error',
            title: 'Lỗi...',
            text: 'Tên đã tồn tại ! vui lòng nhập lại !'
        })
    </script>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
